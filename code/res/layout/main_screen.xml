<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainScreenScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TableLayout
        android:id="@+id/mainScreenTableLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/welcomeTextView"
            style="@style/header_text"
            android:text="@string/welcome_string"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/mainPlayerNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/main_player_hint"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:padding="10dp" >

        </EditText>

        <RadioGroup
            android:id="@+id/mainScreenRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/computerGameRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="@string/computer_game" />

            <RadioButton
                android:id="@+id/mutiPlayerGameRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/mutiplayer_game" />
        </RadioGroup>

        <TableLayout
            android:id="@+id/mainScreenTableLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </TableLayout>

        <TableRow
            android:id="@+id/mainScreenTableRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/addPlayerButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_player_string" 
                android:layout_weight="1"/>

            <Button
                android:id="@+id/startGameButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/start_game_button" 
                android:layout_weight="1"/>

        </TableRow>
    </TableLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="black_list_view" parent="android:Theme.NoTitleBar.Fullscreen">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:padding">5dp</item>     
        <item name="android:textColor">@android:color/white</item>
        <item name="android:divider">@android:color/white</item>
        <item name="android:dividerHeight">0.5dp</item>
    </style>
    <style name="white_list_view" parent="android:Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:divider">@android:color/black</item>
        <item name="android:dividerHeight">0.5dp</item>
    </style>
    <style name="black_table_layout" parent="android:Theme.NoTitleBar.Fullscreen">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="white_table_layout" parent="android:Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="card_image_view" parent="android:Theme.NoTitleBar.Fullscreen">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">2.5dp</item>
    </style> 
    <style name="conversation_thread_text" parent="android:Theme.Light.NoTitleBar.Fullscreen">
		<item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">left</item>
        <item name="android:padding">5dp</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">12.5dp</item>
    </style>
    <style name="header_text" parent="android:Theme.NoTitleBar.Fullscreen">
		<item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>